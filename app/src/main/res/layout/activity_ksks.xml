<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".KSKSActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        app:title="选择年级"
        app:titleTextColor="#ffffff">

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="开始你的挑战吧！"
        android:textSize="20dp"
        android:textColor="#0E0D0D"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/level_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/level_button_press"
        android:text="一年级"
        android:textColor="@drawable/button_text_color"

        />

    <Button
        android:id="@+id/level_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="@drawable/level_button_press"
        android:text="二年级"
        android:textColor="@drawable/button_text_color2"

        />

    <Button
        android:id="@+id/level_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/level_button_press"
        android:text="三年级"
        android:textColor="@drawable/button_text_color3"

        />

    <View
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/boylearn"/>


</LinearLayout>
